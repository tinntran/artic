<form method="post" action="/draft/<%= draft.slug %>?_method=PUT" class="update-post-form">
    <div class="form-group mt-4">
        <input type="text" name="title" id="title" class="form-control" maxlength="256" placeholder="Title"
            required
            value="<%= draft.title %>">
    </div>
    <div class="form-group mt-3">
        <div class="card card-codemirror">
            <div class="card-header">
                Content
            </div>
            <div class="card-body p-0">
                <textarea name="content" id="content" class="form-control" rows="15" required><%= draft.content %>
                </textarea>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Update Changes</button>
    <a href="/draft/<%= draft.slug %>" class="btn btn-dark mt-3">Cancel</a>
</form>