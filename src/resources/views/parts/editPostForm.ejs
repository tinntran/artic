<form method="post" action="/update/<%= post.slug %>?_method=PUT" class="update-post-form">
    <div class="form-group mt-4">
        <input type="text" name="title" id="title" class="form-control" maxlength="256" placeholder="Title"
            required
            value="<%= post.title %>">
    </div>
    <div class="form-group mt-3">
        <div class="card card-codemirror">
            <div class="card-header">
                Content
            </div>
            <div class="card-body p-0">
                <textarea name="content" id="content" class="form-control" rows="15" required><%= post.content %>
                </textarea>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Publish Changes</button>
</form>