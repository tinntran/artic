<form method="post" action="/update/<%= post.slug %>?_method=PUT" class="update-post-form">
    <div class="form-group mt-4">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" required value="<%= post.title %>">
    </div>
    <div class="form-group mt-3">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="15" required><%= post.content %></textarea>
    </div>

    <button type="submit" class="btn btn-primary btn-lg mt-3">Update Changes</button>
</form>