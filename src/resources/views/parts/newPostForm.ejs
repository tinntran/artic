<form method="post" action="/add-post" class="new-post-form">
    <div class="form-group mt-4">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" maxlength="256" required>
    </div>
    <div class="form-group mt-3">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="7" required></textarea>
    </div>

    <button type="submit" name="isDraft" value="no" class="btn btn-primary btn-lg mt-3">Submit</button>
    <button type="submit" name="isDraft" value="yes" class="btn btn-secondary btn-lg mt-3">Save as draft</button>
</form>
