<form method="post" action="/add-post" class="new-post-form">
    <div class="form-group mt-4">
        <input type="text" name="title" id="title" class="form-control" placeholder="Title" 
        maxlength="256" required>
    </div>
    <div class="form-group mt-3">
        <div class="card card-codemirror">
            <div class="card-header">
                Content
            </div>
            <div class="card-body p-0">
                <textarea name="content" id="content" class="CodeMirror" rows="7" required></textarea>
            </div>
        </div>
    </div>

    <button type="submit" name="isDraft" value="no" class="btn btn-primary mt-3">Submit</button>
    <button type="submit" name="isDraft" value="yes" class="btn btn-secondary mt-3">Save as draft</button>
    <a href="/" class="btn btn-dark mt-3">Cancel</a>
</form>
